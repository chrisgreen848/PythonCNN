<dataAnalysis>:
    Label:
        font_size: 75
        font_name: "AbyssinicaSIL-R"
        center_x: root.width / 2
        top: root.top - 25
        text: "V4 Data Analysis"

    BoxLayout:

        height: "40dp"
        width: "500dp"
        center_x: root.width / 2
        top: root.top  / 1.3
        size_hint_y: None
        TextInput:
            id: pathInput
            size_hint_x: 50
        Button:
            text: "Enter File Directory"
            size_hint_x: 25
            on_press: root.getFileDirectory(pathInput.text)

    BoxLayout:

        height: "40dp"
        width: "500dp"
        center_x: root.width / 2
        top: root.top  / 1.44
        size_hint_y: None
        TextInput:
            id: namefileInput
            size_hint_x: 50
        Button:
            text: "Enter Name File Loc"
            size_hint_x: 25
            on_press: root.getNameFileLoc(namefileInput.text)

    Button:
        font_size: 20
        center_x: root.width / 2
        top: root.top  / 7
        height: "110dp"
        width: "200dp"
        text: "Get Class Split"
        on_press: root.getClassSplit()

    BoxLayout:

        height: "40dp"
        width: "500dp"
        center_x: root.width / 2
        top: root.top  / 2
        size_hint_y: None
        TextInput:
            id: trainFile
            size_hint_x: 50
        Button:
            text: "Training File Check"
            size_hint_x: 25
            on_press: root.checkTrainingFile(trainFile.text)

    BoxLayout:

        height: "40dp"
        width: "500dp"
        center_x: root.width / 2
        top: root.top  / 3
        size_hint_y: None
        TextInput:
            id: detFile
            size_hint_x: 50
        Button:
            text: "False Detections"
            size_hint_x: 25
            on_press: root.checkFalseDetections(detFile.text)
