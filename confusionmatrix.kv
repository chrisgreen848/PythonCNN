<confusionMatrix>:

    Label:
        font_size: 75
        font_name: "AbyssinicaSIL-R"
        center_x: root.width / 2
        top: root.top - 25
        text: "V4 Confusion Matrix"



    BoxLayout:

        height: "40dp"
        width: "500dp"
        center_x: root.width / 3
        top: root.top  / 3
        size_hint_y: None
        TextInput:
            id: detFile
            size_hint_x: 20
        Button:
            text: "Test Detection File for Detections"
            size_hint_x: 25
            on_press: root.getFileDirectory(detFile.text)

    BoxLayout:

        height: "40dp"
        width: "500dp"
        center_x: root.width / 3
        top: root.top  / 2.3
        size_hint_y: None
        TextInput:
            id: namefileInput
            size_hint_x: 20
        Button:
            text: "Enter name File Loc"
            size_hint_x: 25
            on_press: root.getNameFileLoc(namefileInput.text)

    Button:
        font_size: 20
        center_x: root.width / 6
        top: root.top  / 7
        height: "110dp"
        width: "133dp"
        text: "Create confusion matrix"

        on_press: root.createConfusionMatrix()
        on_release: root.change_text()


    Label:
        font_size: 12
        font_name: "AbyssinicaSIL-R"
        top: root.top / 1.3
        center_x: root.width / 2
        text: root.classString
